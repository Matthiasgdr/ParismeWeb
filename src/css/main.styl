@import config
@import mixins
@import keyframes
@import animation

html
    scroll-behavior: smooth

body
    font-family: font
    color #1e1e1e
   
strong
    font-weight bold

a
    color: inherit 
    text-decoration: none

h1
    font-size: title
h2
    font-size: subtitle
h3
    font-size: huge

.bg-primary
    background #048374


header
    position relative
    height: 80vh
    width: 100%
    background: url(../../static/paris3.jpg)
    background-size: cover
    background-position: 50% 50%
    overflow hidden
    animation: background-position 0.1s
    nav
        padding 10px
        display flex
        justify-content space-between
        z-index 1
        .brand
            .brand-logo
                img 
                    square(100px)
        .menu
            center()
            color: white
            padding: 0 50px 0 0
            li
                a
                    padding: 10px 20px
                    margin: 0 10px
                    background primary-color
                    border-radius 50px

    .message-container
        display flex
        justify-content space-around
        align-items center
        margin: 50px 0 0 0
        .message-text
            display flex
            flex-direction: column
            width: 40%
            align-self: flex-start
            .message
                color: white
                margin: 15vh 0 0 0
                font-size: title
            .stores
                display flex
                justify-content flex-start
                .store
                    margin: 30px 0 0 0
        .mockup
            img 
                height: 50%

main
    text-align: center
    h2
        margin: 50px
    .features-container
        padding: 100px 0
        .feature-line
            padding: 50px 0
            display flex
            justify-content center
            align-items center
            &:nth-of-type(odd)
                flex-direction: row-reverse
            &:nth-of-type(even)
                background rgba(4,131,116,0.2)
                flex-direction: row
            .feature-mockup
                img
                    width: 70%
            .feature-text
                font-size: huge
                width: 40%
                .icon
                    margin: 0 0 50px 0  
                    square(100px)

footer 
    background #1e1e1e
    .container
        padding: 50px 0
        color white
        display flex
        justify-content flex-start
        width: 80%
        margin: 0 auto;
        .item
            margin: 0 50px 
            h4 
                font-size: normal
                margin: 0 0 20px 0