@import config
@import mixins
@import keyframes
@import animation

html
    scroll-behavior: smooth

body
    font-family: font
    color #1e1e1e
   
strong
    font-weight bold

a
    color: inherit 
    text-decoration: none

h1
    font-size: title
h2
    font-size: subtitle
h3
    font-size: huge

.bg-primary
    background #048374


header
    position relative
    height: 80vh
    width: 100%
    background: url(../../static/paris3.jpg)
    background-size: cover
    background-position: 50% 50%
    overflow hidden
    animation: background-position 0.1s
    nav
        padding 10px
        display flex
        justify-content space-between
        z-index 1
        .menu
            center()
            color: white
            padding: 0 50px 0 0
            li
                a
                    padding: 10px 20px
                    margin: 0 10px
                    background primary-color
                    border-radius 50px

    .message-container
        display flex
        justify-content space-around
        align-items center
        margin: 50px 0 0 0
        .message-text
            display flex
            flex-direction: column
            width: 40%
            align-self: flex-start
            .message
                color: white
                margin: 15vh 0 0 0
                font-size: title
            .stores
                padding: 10px
                display flex
                justify-content center
                .store
                    margin: 20px         
        .mockup
            img 
                height: 50%

main
    height 50vh
    text-align: center
    h2
        margin: 50px


footer 
    background #1e1e1e
    color white